            <?php else: ?>
                <li><a href="/user/settings/?page=<?php echo $i;?>&params=<?=$_SESSION['sort']['params']?>" id="<?= $i ?>" class="pageCount"><?= $i ?></a></li>
            <?php
            endif;
            endfor;
            if (isset($this->next)):
                ?>
                <li><a href="/user/settings/?page=<?php echo $this->next;?>&params=<?=$_SESSION['sort']['params']?>" id="<?= $this->next; ?>" class="pageCount">
                        <?php if($_COOKIE['lang'] == "ua") echo 'Наступна'; else echo 'Следующая';?></a></li>
            <?php endif; ?>
            <?php if (isset($this->next)): ?>
                <li><a href="/user/settings/?page=<?php echo $i;?>&params=<?=$_SESSION['sort']['params']?>" id="<?= $this->last; ?>" class="pageCount">
