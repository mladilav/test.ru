
<?php if ($this->pageCount): ?>
    <div class="pagination">
        <ul>
            <?php if (isset($this->previous)): ?>
                <li><a href="/user/settings/?page=1&params=<?=$_SESSION['sort']['params']?>" id="<?= $this->first; ?>" class="pageCount">
                        <?php if($_COOKIE['lang'] == "ua") echo 'Початок'; else echo 'Начало';?></a></li>
            <?php endif;
            if (isset($this->previous)):
                ?>
                <li><a href="/user/settings/?page=<?php echo $this->previous;?>&params=<?=$_SESSION['sort']['params']?>" id="<?= $this->previous; ?>" class="pageCount">
